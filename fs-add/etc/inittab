# Boot
::sysinit:/etc/init.d/rcS
# Console
ttyAS0::askfirst:/bin/sh
# Network
::once:/etc/init.d/network
# Time Network Protocol
::once:/etc/init.d/chronyd
# minisatip
::once:/etc/init.d/satip
# dropbear
::once:/etc/init.d/dropbear
# inetd
::once:/etc/init.d/inetd
# crond
::once:/etc/init.d/crond
# oscamd
::once:/etc/init.d/oscamd
# watchdog
::once:/etc/init.d/watchdog
# Others
::ctrlaltdel:/sbin/reboot
::shutdown:/sbin/swapoff -a
::shutdown:/bin/umount -a -r
::restart:/sbin/init
